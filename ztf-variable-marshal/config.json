{
  "server": {
    "logo": "ZTF Variable Marshal",
    "environment": "production",
    "host": "0.0.0.0",
    "port": "4000"
  },

  "path": {
    "path_app": "/app",
    "path_docs": "/app/doc/",
    "path_logs": "/app/logs/",
    "path_data": "/data/",
    "path_tmp": "/_tmp/"
  },

  "database": {
    "max_pool_size": 1200,
    "host": "ztf_variable_marshal_mongo_1",
    "port": 27017,
    "db": "ztf_variable_marshal",
    "collection_users": "users",
    "collection_queries": "queries",
    "collection_stats": "stats"
  },

  "kowalski": {
    "protocol": "https",
    "host": "kowalski.caltech.edu",
    "port": 443,
    "coll_sources": "ZTF_sources_20191101",
    "coll_exposures": "ZTF_exposures_20191101",
    "cross_match": {
      "cone_search_radius": "5",
      "cone_search_unit": "arcsec",
      "catalogs": {
        "PS1_DR1": {
          "filter": {},
          "projection": {
            "_id": 1, "coordinates.radec_str": 1, 
            "gMeanPSFMag": 1, "gMeanPSFMagErr": 1, 
            "rMeanPSFMag": 1, "rMeanPSFMagErr": 1, 
            "iMeanPSFMag": 1, "iMeanPSFMagErr": 1, 
            "zMeanPSFMag": 1, "zMeanPSFMagErr": 1, 
            "yMeanPSFMag": 1, "yMeanPSFMagErr": 1}
        },
        "IPHAS_DR2": {
          "filter": {},
          "projection": {
            "_id": 0, "coordinates.radec_str": 1, "name": 1,
            "r": 1, "rErr": 1, "i": 1, "iErr": 1, "ha": 1, "haErr": 1}
        },
        "Gaia_DR2": {
          "filter": {},
          "projection": {
            "_id": 1, "coordinates.radec_str": 1,
            "parallax": 1, "parallax_error": 1,
            "phot_g_mean_mag": 1, "phot_bp_mean_mag": 1, "phot_rp_mean_mag": 1}
        },
        "2MASS_PSC": {
          "filter": {},
          "projection": {
            "_id": 1, "coordinates.radec_str": 1,
            "j_m": 1, "h_m": 1, "k_m": 1}
        },
        "AllWISE": {
          "filter": {},
          "projection": {
            "_id": 1, "coordinates.radec_str": 1,
            "w1mpro": 1, "w1sigmpro": 1, "w2mpro": 1, "w2sigmpro": 1,
            "w3mpro": 1, "w3sigmpro": 1, "w4mpro": 1, "w4sigmpro": 1, "ph_qual": 1}
        },
        "ZTF_alerts": {
          "filter": {},
          "projection": {
            "_id": 0, "candid": 1, "objectId": 1, "coordinates.radec_str": 1,
            "candidate.jd": 1, "candidate.programid": 1, "candidate.magpsf": 1, "candidate.sigmapsf": 1}
        },
        "RFC_2019a": {
          "filter": {},
          "projection": {
            "_id": 1, "coordinates.radec_str": 1, "category": 1,
            "S_band_flux_total": 1, "C_band_flux_total": 1, "X_band_flux_total": 1,
            "U_band_flux_total": 1, "K_band_flux_total": 1}
        },
        "LAMOST_DR5_v3": {
          "filter": {},
          "projection": {
            "_id": 1, "coordinates.radec_str": 1, "mjd": 1,
            "snru": 1, "snrg": 1, "snrr": 1, "snri": 1, "snrz": 1,
            "objtype": 1, "class": 1, "subclass":  1}
        }
      }
    }
  },

  "misc": {
    "filter_MSIP": true,
    "filter_MSIP_best_before_mjd": 58483.0,
    "source_types": [
      "AGB",
      "AGN",
      "AM CVn",
      "Black Widow Pulsar",
      "Blazar",
      "BY Draconis",
      "Carbon star",
      "Cepheid",
      "CV",
      "delta Scuti or SX Phoenicis",
      "dMe",
      "Dwarf Nova",
      "Eclipsing binary",
      "F-type star",
      "Galaxy",
      "G/K-type star",
      "Herbig Ae/Be Star",
      "HMXB",
      "HVS",
      "HW Vir",
      "Intermediate Polar",
      "LBV",
      "LMXB",
      "Long Secondary Period (LSP)",
      "LPV",
      "M-dwarf",
      "M-giant",
      "Mira",
      "Nova",
      "O/B star",
      "PCEB",
      "Polar",
      "Pulsar binary",
      "QSO",
      "R CrBor",
      "Redback Pulsar",
      "Rock",
      "RR Lyrae",
      "RS CVn",
      "RSG",
      "sdB binary",
      "SNIa",
      "SNIb",
      "SNIc",
      "SNII",
      "S-Star",
      "SU UMa",
      "T Tauri Star",
      "WD (ELM)",
      "WD-MD Binary",
      "WD-MS Binary",
      "WD Variable",
      "WD-WD Binary",
      "Wolf-Rayet",
      "W UMa",
      "YSO"],
    "source_flags": [
      "Bad Astrometry",
      "Bad Photometry",
      "Eclipsing",
      "Known Source",
      "Outbursting",
      "Periodic",
      "Pulsating",
      "Spectrum but Unclassified",
      "X-Ray Source"],
    "logging_level": "debug",
    "query_expiration_interval": 10,
    "max_time_ms": 300000
  }
}